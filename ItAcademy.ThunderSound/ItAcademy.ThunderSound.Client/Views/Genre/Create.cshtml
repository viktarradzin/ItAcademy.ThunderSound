@model ItAcademy.ThunderSound.Client.Models.GenreViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Genre", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Добавить жанр</legend>

        <div class="editor-label">Название жанра</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GenreName)
            @Html.ValidationMessageFor(model => model.GenreName, "", new { @class = "text-danger" })
        </div>
        <div class="editor-label">Изображение </div>
        <div class="editor-field">
            <input type="file" name="uploadImage" />
        </div>
        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
}























