@model IEnumerable<ItAcademy.ThunderSound.Client.Models.TrackViewModel>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <img src="~/Content/logo.png" class="img-fluid d-block w-100" alt="...">
                <div class="list-group">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Genres", "Index", "Genre", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Singers", "Index", "Singer", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Tracks", "Index", "Track", null, new { @class = "list-group-item" })
                    @Html.ActionLink("Albums", "Index", "PlayList", null, new { @class = "list-group-item" })
                </div>
            </div>
            <div class="col-lg-9">
                @if (User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Create", "Create")
                }

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <img id="main_image" src="@Url.Action("GetImage", new { id = item.TrackId })" />
                                <div class="card-body">
                                    <h6>@Html.ActionLink(item.Singer.SingerName, "Singer", "Track", new { id = item.Singer.SingerId }, null)</h6>
                                    <p class="card-text">@item.TrackName</p>
                                    <h6>@Html.ActionLink(item.PlayList.PlayListName, "PlayList", "Track", new { id = item.PlayList.PlayListId }, null)</h6>
                                    <h6>@Html.ActionLink(item.Genre.GenreName, "Genre", "Track", new { id = item.Genre.GenreId }, null)</h6>
                                    <div class="card-body">
                                        <audio controls src="@Url.Action("Audio", new { id = item.TrackId})" ) />
                                    </div>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.TrackId })
                                        @:&nbsp;
                                        @Html.ActionLink("Delete", "Delete", new { id = item.TrackId })
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

