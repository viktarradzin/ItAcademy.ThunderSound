@{ ViewBag.Title = "Index"; }
@model IEnumerable<ItAcademy.ThunderSound.Client.Models.TrackViewModel>

<div class="container">
    <div class="row">
        @Html.Partial("Menu")
        <div class="col-lg-9">
            <div class="row my-4">
            <div class="col-md-12">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <a href=@Url.Action("Genre", "Track", new { id = 1 }, null)><img src="~/Content/IndieRock.jpg" class="img-fluid d-block w-100" alt="..."></a>
                        </div>
                        <div class="carousel-item">
                            <a href=@Url.Action("Genre", "Track", new { id = 3 }, null)> <img src="~/Content/Metall.png" class="img-fluid d-block w-100" alt="..."></a>
                        </div>
                        <div class="carousel-item">
                            <a href=@Url.Action("Genre", "Track", new { id = 4 }, null)>   <img src="~/Content/Rock.png" class="img-fluid d-block w-100" alt="..."></a>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100">
                            <img id="main_image" src="@Url.Action("GetImage", new { id = item.TrackId } )" />
                            <div class="card-body">
                                <h6>@Html.ActionLink(item.Singer.SingerName, "Singer", "Track", new { id = item.Singer.SingerId }, null)</h6>
                                <p class="card-text">@item.TrackName</p>
                                <h6>@Html.ActionLink(item.PlayList.PlayListName, "PlayList", "Track", new { id = item.PlayList.PlayListId }, null)</h6>
                                <h6>@Html.ActionLink(item.Genre.GenreName, "Genre", "Track", new { id = item.Genre.GenreId }, null)</h6>
                                <div class="card-body">
                                    <audio controls src="@Url.Action("Audio", new { id = item.TrackId})" ) />
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
