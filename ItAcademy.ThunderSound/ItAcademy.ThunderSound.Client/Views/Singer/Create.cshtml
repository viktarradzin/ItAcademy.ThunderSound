@model ItAcademy.ThunderSound.Client.Models.SingerViewModel

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Singer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Добавить исполнителя</legend>

        <div class="editor-label">Имя</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div class="editor-label">Жанр</div>
        <div id="singerPlace" class="editor-field">
            @Html.DropDownListFor(model => model.Genre.GenreId, Model.SelectListGenres, "--Select--", new { @id = "singer" });
            @Html.ValidationMessageFor(model => model.Genre.GenreId, "", new { @class = "text-danger" })
        </div>
        <div class="editor-label">Изображение исполнителя</div>
        <div class="editor-field">
            <input type="file" name="uploadImage" />
        </div>
        <p>
            <input type="submit" value="Добавить" />
        </p>
    </fieldset>
}

