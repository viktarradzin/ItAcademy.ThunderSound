@model ItAcademy.ThunderSound.Client.Models.SingerViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Singer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактировать исполнителя</legend>
        @Html.HiddenFor(model => model.SingerId)
        <div class="editor-label">Имя исполнителя</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
        <div id="singerPlace" class="editor-field">
            @Html.DropDownListFor(model => model.Genre.GenreId, Model.SelectListGenres, "--Select--", new { @id = "singer" });
            @Html.ValidationMessageFor(model => model.Genre.GenreId, "", new { @class = "text-danger" })
        </div>
        <td>
            <img src="@Url.Action("GetImage", new { id = Model.SingerId })" />
        </td>
        <p>
            <input type="submit" value="Редактировать" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

